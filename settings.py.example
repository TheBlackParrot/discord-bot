class Commands():
	'''
	The permit command has no external script, as its content resides in various places in client.py.
	'''
	
	def __init__(self):
		self.commands = {
			"markov": [
				"add",
				"reload",
				"stats"
			],

			"phrase": [],

			"ping": [
				"pong"
			],

			"color": [
				"doc"
			],

			"get": [
				"channelID",
				"userID"
			],

			"permit": [
				"remove"
			],

			"slots": [
				"spin",
				"tokens",
				"reset"
			],

			"audio": [
				"join",
				"play",
				"stop",
				"leave"
			],

			"8ball": [
				"add",
				"remove"
			],

			"avatar": []
		};

	def __str__(self):
		output = ""
		for cmd, sublist in self.commands.items():
			output += cmd + ":\n";
			output += ', '.join(i for i in sublist);
			output += "\n";

		return output.strip();

	def isCommand(self, command=None, subcommand=None):
		if command:
			if command in self.commands:
				if subcommand:
					if subcommand in self.commands[command]:
						return True;
				else:
					return True;

		return False;